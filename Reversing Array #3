//Reversing array (Method 3) --> String

import java.util.*;
public class Main8{

public static void main (String[]args) {
	String [] array = {"Felix", "Delgado"};
	System.out.println("Original Array: " + Arrays.toString(array));

	//Reversing array with StringBuilder.append() 

	StringBuilder reverse = new StringBuilder();

	for (int i = array.length; i > 0; i--){
	  reverse.append(array[i-1]).append(" ");
	  }
	
	String[] temp = reverse.toString().split(" ");

    // Output
    System.out.println("Reversed Array :" + Arrays.toString(temp));
	
}
}

